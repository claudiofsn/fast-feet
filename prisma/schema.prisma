generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum UserRole {
  ADMIN
  DELIVERER
}

model User {
  id           String     @id @default(uuid())
  name         String
  email        String     @unique
  cpf          String     @unique
  password     String     @map("password_hash") // Mapeia para snake_case no banco
  roles        UserRole[] @default([DELIVERER]) // Array de Enums (Postgres suporta nativamente)
  
  createdAt    DateTime   @default(now()) @map("created_at")
  updatedAt    DateTime?  @updatedAt @map("updated_at")

  @@map("users")
}