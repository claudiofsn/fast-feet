generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum UserRole {
  ADMIN
  DELIVERER
}

model User {
  id       String     @id @default(uuid())
  name     String
  email    String     @unique
  cpf      String     @unique
  password String     @map("password_hash")
  roles    UserRole[] @default([DELIVERER])

  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime? @updatedAt @map("updated_at")
  deletedAt DateTime? @map("deleted_at")
  orders    Order[]

  @@map("users")
}

model Recipient {
  id           String  @id @default(uuid())
  name         String
  email        String  @unique
  zipCode      String  @map("zip_code")
  street       String
  number       String
  complement   String?
  neighborhood String
  city         String
  state        String

  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime? @updatedAt @map("updated_at")
  deletedAt DateTime? @map("deleted_at")
  orders    Order[]

  @@map("recipients")
}

model Order {
  id      String @id @default(uuid())
  product String

  // Relacionamentos (IDs)
  recipientId   String  @map("recipient_id")
  deliverymanId String? @map("deliveryman_id")
  signatureId   String? @unique @map("signature_id")

  // Datas de controle
  // Mantendo 'canceladedAt' conforme sua entidade
  canceladedAt DateTime? @map("canceladed_at")
  startDate    DateTime? @map("start_date")
  endDate      DateTime? @map("end_date")

  // Auditoria
  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime? @updatedAt @map("updated_at")

  // Definição dos relacionamentos (opcional, mas necessário para o Prisma)
  recipient   Recipient   @relation(fields: [recipientId], references: [id])
  deliveryman User?       @relation(fields: [deliverymanId], references: [id])
  signature   Attachment? @relation(fields: [signatureId], references: [id])

  @@map("orders")
}

model Attachment {
  id    String @id @default(uuid())
  order Order?

  @@map("attachments")
}
