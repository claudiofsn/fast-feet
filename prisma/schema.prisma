generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum UserRole {
  ADMIN
  DELIVERER
}

model User {
  id       String     @id @default(uuid())
  name     String
  email    String     @unique
  cpf      String     @unique
  password String     @map("password_hash")
  roles    UserRole[] @default([DELIVERER])

  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime? @updatedAt @map("updated_at")
  deletedAt DateTime? @map("deleted_at")

  @@map("users")
}

model Recipient {
  id           String  @id @default(uuid())
  name         String
  email        String  @unique
  zipCode      String  @map("zip_code")
  street       String
  number       String
  complement   String?
  neighborhood String
  city         String
  state        String

  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime? @updatedAt @map("updated_at")
  deletedAt DateTime? @map("deleted_at")

  @@map("recipients")
}
